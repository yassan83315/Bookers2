<html>
<head>
</head>
<body>
<%= render 'layouts/error_messages', model: @book %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render 'layouts/list', user: @user, book: @book %>
		</div>
		<div class="col-md-9">
			<h2>Books</h2>
			<table>
				<tr style=" border-bottom: 2px solid #ddd">
					<td>&nbsp;</td>
					<td style="width: 300px; text-align: center;"><strong>Title</strong></td>
					<td style="width: 300px; text-align: center;"><strong>Opinion</strong></td>
				</tr>
				<% @books.each do |book| %>
				<% user = User.find(book.user_id) %>
				<tr style="border-bottom: 1px solid #ddd">
					<td><%= link_to user_path(user.id) do %>
						<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpg', fallback: "no_image.jpg"%>
						<% end %>
						</td>
					<td style="text-align: center;"><%= link_to book.title, book_path(book.id) %>
						</td>
					<td style="text-align: center;"><%= book.body %></td>
				<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>
</body>
</html>



