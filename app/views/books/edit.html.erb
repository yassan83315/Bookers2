<div class="container">
	<div class="row">
		<div class="col-lg-3"></div>
		<div class="col-lg-6">
		<h2 style="padding: 10px;">Editing Book</h2>
		<%= form_for(@book) do |f| %>
		<%= render 'layouts/error_messages', model: f.object %>
			<p><strong>Title</strong></p>
			<%= f.text_field :title, class:"col-lg-12"  %>
			<p><strong>Opinion</strong></p>
			<%= f.text_area :body, class:"col-lg-12" %>

			<%= f.submit "Create Book",class: "btn btn-primary col-lg-12" %>
		<% end %>

		<span><%= link_to "show", book_path(@book) %></span>
		|
		<span><%= link_to "Back", books_path %></span>

		</div>
		<div class="col-lg-3"></div>
	</div>
</div>