<div class="container">
	<div class="row">
			<% if flash[:notice] %>
				<div><p><%= flash[:notice] %></p></div>
			<% end %>
		<div class="col-md-3">
			<%= render 'layouts/list', user: @user, book: @book %>
		</div>
		<div class="col-md-9">
		<h2>Books</h2>
			<table>
				<tr style=" border-bottom: 2px solid #ddd">
					<td>&nbsp;</td>
					<td style="width: 300px; text-align: center;"><strong>Title</strong></td>
					<td style="width: 300px; text-align: center;"><strong>Opinion</strong></td>
				</tr>
				<% @books.each do |book| %>
				<% user = User.find(book.user_id) %>
				<tr style=" border-bottom: 1px solid #ddd">
					<td>
						<%= link_to user_path(user.id) do %>
						<%= attachment_image_tag user, :profile_image, fomat: 'jpg', fallback: "no_image.jpg", size: "100x100" %>
						<% end %>
					</td>
					<td style="text-align: center;"><%= link_to book_path(book.id) do %>
						<%= book.title %>
						<% end %>
						</td>
					<td style="text-align: center;"><%= book.body %></td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>
</body>
</html>