<html>
<head>
</head>
<body>
<div class="container">
	<div class="row">
		<div class="col-md-3">
		<%= render 'layouts/list', user: @user, book: @book %>
		</div>
		<div class="col-md-9">
			<h2>Users</h2>
			<table>
				<tr style="border-bottom: 2px solid #ddd">
					<td style="text-align: center;"><strong>image<strong></td>
					<td style="width: 300px; text-align: center;"><strong>name</strong></td>
					<td style="width: 500px;">&nbsp;</td>
				</tr>
				<% @users.each do |user| %>
				<tr style="border-bottom: 1px solid #ddd">
				</style>
					<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpg', fallback: "no_image.jpg"%></td>
					<td style="text-align: center;"><%= user.name %></td>
					<td style="text-align: center;"><%= link_to "show", user_path(user.id) %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
</body>
</html>

